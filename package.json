{
	"name": "boilerplate",
	"version": "1.0.0",
	"description": "Is QA working?",
	"main": "src/api/app.ts",
	"scripts": {
		"dev:checker": "ts-node src/api/puppeteer.app.ts",
		"dev": "npm-run-all --parallel dev:api dev:app",
		"dev:api": "vite --config vite.config.api.ts",
		"dev:app": "vite",
		"build:app": "vite build",
		"preview:app": "vite preview",
		"test": "echo \"Would you like to have tests?\n(me too)\n\"",
		"migration:check": "mikro-orm migration:pending",
		"migration:generate": "mikro-orm migration:create",
		"migration:execute": "mikro-orm migration:up",
		"prettier": "prettier -c --loglevel warn",
		"prettier:fix": "prettier -w --loglevel warn",
		"eslint": "eslint --max-warnings 0",
		"eslint:fix": "npm run eslint --fix",
		"stylelint": "stylelint --max-warnings 0",
		"stylelint:fix": "npm run stylelint --fix",
		"update": "npx -y npm-check-updates",
		"prepare": "husky install"
	},
	"author": "Marc Jovaní González",
	"license": "ISC",
	"dependencies": {
		"@mikro-orm/cli": "^5.9.0",
		"@mikro-orm/core": "^5.9.0",
		"@mikro-orm/migrations": "^5.9.0",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@mikro-orm/sqlite": "^5.9.0",
		"fastify": "^4.24.3",
		"mikro-orm": "^5.9.0",
		"preact": "^10.18.1",
		"preact-render-to-string": "^6.2.2",
		"puppeteer": "^21.4.1"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^18.1.0",
		"@preact/preset-vite": "^2.6.0",
		"@swc/core": "^1.3.95",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"commitizen": "^4.3.0",
		"commitlint": "^18.2.0",
		"cz-git": "^1.7.1",
		"eslint": "^8.52.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-clean-order": "^5.2.0",
		"stylelint-config-standard-scss": "^11.0.0",
		"stylelint-prettier": "^4.0.2",
		"typescript": "^5.2.2",
		"vike": "^0.4.144",
		"vite": "^4.5.0",
		"vite-plugin-node": "^3.0.2"
	}
}
